<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahmadnaufalfarhan.guestguessitb.MapsActivity"
    android:layout_alignParentRight="false"
    android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonCenterMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_mylocation"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_camera"
        app:backgroundTint="@color/white"
        android:tint="@color/black"
        android:layout_alignTop="@+id/buttonCenterMap"
        android:layout_toLeftOf="@+id/buttonCenterMap"
        android:layout_toStartOf="@+id/buttonCenterMap"
        android:layout_marginRight="5dp"
        android:onClick="startPictureIntent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonSubmitAnswerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignTop="@+id/buttonTakePicture"
        android:layout_toLeftOf="@+id/buttonTakePicture"
        android:layout_toStartOf="@+id/buttonTakePicture"
        android:src="@drawable/abc_ic_commit_search_api_mtrl_alpha"
        android:layout_marginRight="5dp"
        android:onClick="startSubmitAnswerActivity" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCompass"
        android:src="@drawable/ic_arrows"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />


</RelativeLayout>
